<%- include('../../partials/header.ejs') %>

<body>
    <%- include('../../partials/homenavbar.ejs') %>
    <div class="container">
        <br>
        <% result.articles.rows.forEach(article => { %>
            <div class="card-header">
                <h3><%= article.title %></h3>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a style="float: left" href="/articles/page/<%= result.page - 1 %>">Anterior</a>
                <% } else if(result.page == 2) { %>
                    <a style="float: left" href="/">Anterior</a>
                <% } %>

                <% if(result.next) { %>
                    <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Pr√≥ximo</a>
                <% } %>
            </div>
            <br>
        </div>
        <br>

    </div>
</body>

